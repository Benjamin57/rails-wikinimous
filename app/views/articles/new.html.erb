<h1>New article</h1>
<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.textarea :content, class: "form-control"  %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to articles", articles_path %>
